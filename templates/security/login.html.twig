{% extends 'base.html.twig' %}

{% block body %}


    <!-- component -->
    <body class="font-mono bg-gray-400">
    <!-- Container -->
    <div class="container mx-auto">
        <div class="flex justify-center px-6 my-12">
            <!-- Row -->
            <div class="w-full xl:w-3/4 lg:w-11/12 flex">
                <!-- Col -->
                <div
                        class="w-full h-auto bg-gray-400 hidden lg:block lg:w-1/2 bg-cover rounded-l-lg"
                        style="background-image: url('https://source.unsplash.com/K4mSJ7kc0As/600x800')"
                ></div>
                <!-- Col -->
                <div class="w-full lg:w-1/2 bg-white p-5 rounded-lg lg:rounded-l-none">
                    <h3 class="pt-4 text-6xl text-center">Connexion</h3></br></br>
                    <form class="px-8 pt-6 pb-8 mb-4 bg-white rounded" action="{{ path('security_login') }}" method="post">
                        <div class="mb-4">
                            <label class="block mb-2 text-sm font-bold text-gray-700" for="username">
                                Adresse email
                            </label>
                            <div class="'block w-full px-4 py-2 mt-2 text-gray-700 placeholder-gray-500 bg-white border border-gray-300 rounded-md dark:bg-gray-800 dark:border-gray-600 dark:placeholder-gray-400 focus:border-blue-500 dark:focus:border-blue-500 focus:outline-none focus:ring'">
                                <input placeholder="Adresse email" required name="_username" type="text" class="form-control">
                            </div>
                        </div></br>
                        <div class="mb-4">
                            <label class="block mb-2 text-sm font-bold text-gray-700" for="password">
                                Mot de passe
                            </label>
                            <div class='block w-full px-4 py-2 mt-2 text-gray-700 placeholder-gray-500 bg-white border border-gray-300 rounded-md dark:bg-gray-800 dark:border-gray-600 dark:placeholder-gray-400 focus:border-blue-500 dark:focus:border-blue-500 focus:outline-none focus:ring'>
                                <input placeholder="Mot de passe" required name="_password" type="password" class="form-control">
                            </div>
                        </div></br>

                        <div class="mb-6 text-center">
                            <div class="w-full px-4 py-2 font-bold text-white bg-blue-500 rounded-full hover:bg-blue-700 focus:outline-none focus:shadow-outline">
                                <button type="submit" class="btn btn-success">Se connecter</button>
                            </div>
                        </div>
                        <hr class="mb-6 border-t" />
                        <div class="text-center">
                            <a
                                    class="inline-block text-sm text-blue-500 align-baseline hover:text-blue-800"
                                    href="{{ path('security_registration') }}"
                            >
                                Créer un compte !
                            </a>
                        </div>
                        <div class="text-center">
                            <a
                                    class="inline-block text-sm text-blue-500 align-baseline hover:text-blue-800"
                                    href="{{ path('security_forget') }}"
                            >
                                Mot de passe oublié ?
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    </body>
    </form>
{% endblock %}
